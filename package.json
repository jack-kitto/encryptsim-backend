{
  "name": "node-express-api-ts",
  "description": "Simple api sample in Node",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "files": [
    "dist",
    ".env"
  ],
  "scripts": {
    "dev": "npm run build && npm run start:dev",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest --detectOpenHandles --verbose --config jest.config.json",
    "compile": "tsc --noEmit",
    "build": "tsup-node",
    "setup-env:dev": "infisical export --env dev --path=/server --format=dotenv > ./.env",
    "deploy:dev": "firebase deploy --project encrypsim-dev",
    "start": "node dist/src/index.js",
    "emulate": "firebase emulators:start --project encrypsim-dev",
    "start:dev": "./node_modules/.bin/ts-node-dev --respawn --transpile-only src/index.ts"
  },
  "author": "Google LLC",
  "license": "Apache-2.0",
  "dependencies": {
    "@faker-js/faker": "^9.9.0",
    "@google-cloud/logging": "^11.2.0",
    "@google-cloud/secret-manager": "^6.0.1",
    "@montarist/airalo-api": "^1.0.4",
    "@solana/web3.js": "^1.90.0",
    "@t3-oss/env-core": "^0.13.8",
    "@types/compression": "^1.8.1",
    "axios": "^1.6.7",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "firebase-admin": "^12.6.0",
    "firebase-functions": "^6.0.1",
    "nocache": "^4.0.0",
    "node-fetch": "^3.3.2",
    "uuid": "^11.1.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@jest/globals": "^30.0.4",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/faker": "^6.6.8",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.19.8",
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "eslint": "^8.9.0",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-import": "^2.25.4",
    "firebase-functions-test": "^3.1.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.0",
    "ts-jest": "^29.1.2",
    "ts-node-dev": "^2.0.0",
    "tsup": "^8.3.6",
    "typescript": "^5.8.3",
    "uui": "^1.0.7"
  },
  "engines": {
    "node": ">=20.18.0"
  }
}
